<?xml version="1.0"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0">

	<class name="NHibernate.DomainModel.ClassWithCompositeId" assemblyName="NHibernate.DomainModel" table="class_with_composite_id">
		<composite-id name="Id" class="NHibernate.DomainModel.CompositeId" assemblyName="NHibernate.DomainModel">
			<key-property name="KeyString" column="string_" type="String(20)" />
			<key-property name="KeyShort" column="short_"/>
			<key-property name="KeyDateTime" column="date_" type="DateTime"/>
		</composite-id>
		
		<property name="OneProperty" column="one_property"/>
	</class>
	
</hibernate-mapping>
