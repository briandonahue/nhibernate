<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0">

<class 
	name="NHibernate.DomainModel.Category, NHibernate.DomainModel" 
	table="category"
	dynamic-update="true"
	dynamic-insert="true"
>
	
	<id 
		name="Id" 
		unsaved-value="0"
	>
		<generator class="native"/>
	</id>

	<list 
		name="Subcategories" 
		lazy="true" 
		cascade="all"
	>
		<key column="parent"/>
		<index column="ord"/>
		<one-to-many class="NHibernate.DomainModel.Category, NHibernate.DomainModel"/>
	</list>

	<property name="Name"/>
	<many-to-one 
		name="Assignable" 
		column="`assign able id`"
	/>
	
</class>

<class 
	name="NHibernate.DomainModel.Assignable, NHibernate.DomainModel" 
	table="`assign able`"
>
	<id name="Id">
		<generator class="assigned"/>
	</id>
	
	<bag 
		name="Categories" 
		inverse="true" 
		cascade="all"
	>
		<key column="`assign able id`"/>
		<one-to-many class="NHibernate.DomainModel.Category, NHibernate.DomainModel"/>
	</bag>
</class>

</hibernate-mapping>