#end
$clazz.modifiers $clazz.scope $clazz.declarationType $clazz.generatedName#if(($javaTool.hasExtends($clazz))||($javaTool.hasImplements($clazz))) : #end $javaTool.getExtends($clazz) $javaTool.getImplements($clazz) {

#if(!$clazz.isInterface())
	// Fields
#foreach($field in $clazz.Fields())  
	## nullable persistent comment not included
	$field.FieldScope() $javaTool.getTrueTypeName($field, $class2classmap) $field.fieldName;
