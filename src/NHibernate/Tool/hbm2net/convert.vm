	## Property accessors for interface
	#foreach($field in $clazz.getFields())
	#if($property.hasMeta("field-description"))
	/**
	$javaTool.toJavaDoc($clazz.getMetaAsString("field-description"),4) */
	#end
	## getter
$field.PropertyGetScope() ${javaTool.getTrueTypeName($field, $class2classmap)} $field.GetterSignature();
	
	## setter
	$field.PropertySetScope() void set$field.AccessorName()($javaTool.getTrueTypeName($field, $class2classmap) $field.FieldName());
	#end
#end
}
