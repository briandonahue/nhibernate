<?xml version="1.0" ?>

<project 
	name="NHibernate.Mapping.Attributes.Test" 
	default="build" 
	xmlns="http://nant.sf.net/release/0.85-rc3/nant.xsd"
>

	<property name="root.dir" value="..\.." />
	<include buildfile="${root.dir}/build-common/common-project.xml" />

	<target name="init" depends="common.init">
		<property name="assembly.description" value="The Unit Tests for NHibernate.Mapping.Attributes ${project.version}." />
		<property name="clover.instrument" value="false" />

		<assemblyfileset id="project.references" basedir="${bin.dir}">
			<include name="System.dll" />
			<include name="System.Data.dll" />
			<include name="System.XML.dll" />
			<include name="NHibernate.Mapping.Attributes.dll" />
			<include name="Iesi.Collections.dll" />
			<include name="nunit.framework.dll"/>
		</assemblyfileset>
	</target>

	<target name="generate-assemblyinfo" depends="init common.generate-assemblyinfo" />
	<target name="build" depends="generate-assemblyinfo common.compile-tests">
		<copy 
			file="Baz.Reference.hbm.xml"
			tofile="${bin.dir}/Baz.Reference.hbm.xml"
		/>
		<copy 
			file="DomainModel.Reference.hbm.xml"
			tofile="${bin.dir}/DomainModel.Reference.hbm.xml"
		/>
	</target>

	<target name="test" depends="build common.run-tests" />

</project>
