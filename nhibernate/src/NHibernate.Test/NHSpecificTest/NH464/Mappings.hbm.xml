<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0"
	namespace="NHibernate.Test.NHSpecificTest.NH464"
	assembly="NHibernate.Test">

	<class name="Container" lazy="false">
		<id name="Id">
			<generator class="assigned" />
		</id>

		<component name="Component" class="Component" access="nosetter.camelcase" insert="true" update="true">
			<bag name="Dates" inverse="false" access="nosetter.camelcase" table="ComponentDates" lazy="true" batch-size="10">
				<key column="ParentID"/>
                <composite-element class="DateRange">
                    <property name="Start" column="DateFrom" type="DateTime"/>
                    <property name="End" column="DateTo" type="DateTime"/>
                </composite-element>
			</bag>
		</component> 
	</class>
</hibernate-mapping>
 