<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   namespace="NHibernate.Test.NHSpecificTest.NH1300"
				   assembly="NHibernate.Test"
				   default-access="field.camelcase">
	<class name="Parent">
		<id name="Id">
			<generator class="native" />
		</id>
		<property name="Description"/>
		<bag name="Childs" generic="true" inverse="true" cascade="all-delete-orphan">
			<key column="ownerId" on-delete="cascade"/>
			<one-to-many class="Child"/>
		</bag>
	</class>

	<class name="Child">
		<id name="Id">
			<generator class="native" />
		</id>
		<property name="Description" />
		<many-to-one name="Owner" class="Parent" column="ownerId"/>
	</class>
</hibernate-mapping>
